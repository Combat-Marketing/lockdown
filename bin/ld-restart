#!/bin/bash
#ld-restart

#===============================================================================
#
# FILE: 
#   ld-restart
#
# REVISION:  
#   001
#
# WHEN TO USE: 
#   When you want to restart IP Tables, IP Set and Fail2Ban in the proper
#   order.
#
# USAGE: 
#   ld-restart [-d] [-h] [-v] [-y]
#   ld-restart [--dry-run] [--help] [--verbose] [--yes]
#
# DESCRIPTION:
#   Reloads the services in the following order:
#     * iptables
#     * ipset
#     * fail2ban
#
# OPTIONS:
#   -d | --dry-run
#      Echos the commands that would be executed rather than executing them
#   -h | --help
#      Run help function and exit
#   -v | --verbose
#      Output each line of the script after validations are parsed
#   -y | --yes
#      *Required*
#
# AUTHOR: Jason (@iDoMeteor)
#===============================================================================

# Strict mode
set -euo pipefail
IFS=$'\n\t'

# Values
DRY_RUN=''
ORIGIN=`pwd`
VERBOSE=0
YES=0

# Help function
help () { 
  echo "Description:"
  echo "  Reload IP Tables, IP Set and Fail2Ban"
  echo "Usage:"
  echo "  `basename $0` [-d] [-f] [-v] [-y]"
  echo "  `basename $0` [--dry-run] [--force] [--verbose] [-y]"
  exit 0
}

# Check for arguments or provide help
if [ $# -eq 0 ] ; then
  help
fi

# Parse command line arguments into variables
while :
do
    case ${1:-} in
      -d | --dry-run)
      DRY_RUN='echo'
      shift 1
    ;;
      -h | --help)
      help
    ;;
      -v | --verbose)
      VERBOSE=1
      shift 1
    ;;
      -y | --yes)
      YES=1
      shift 1
    ;;
      -*)
      echo "Error: Unknown option: $1" >&2
      exit 1
    ;;
      *)  # No more options
      break
    ;;
    esac
done

# Safety check
if (( ! YES ))
then
  echo "Error: Must use -y or --yes to execute."
  help
fi

# Check verbosity
if (( VERBOSE ))
then
  set -v
fi

# Execution commands
$DRY_RUN service fail2ban restart
$DRY_RUN service ipset restart
$DRY_RUN service iptables restart
